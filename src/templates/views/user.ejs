<%- include('../partials/header.ejs') %>
<main class="container">
   <h1><%= user.username %></h1>
    <% for (const post of user.posts){%>
        <div class="card">
            <div class="card-header">
                <h6>
                    <%- user.username %>
                </h6>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <%=post.body %>
                </p>
                <small>
                    <%=post.dateCreated%>
                </small>
            </div>
        </div>
    
        <% } %>
</main>
<%- include('../partials/footer.ejs') %>